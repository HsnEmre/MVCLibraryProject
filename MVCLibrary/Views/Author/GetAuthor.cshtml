@model MVCLibrary.Models.Entities.TBLAUTHOR
@{
    ViewBag.Title = "GetAuthor";
    Layout = "~/Views/Shared/_MYLayout.cshtml";
}

<h2>Yazar Güncelle</h2>

@using (Html.BeginForm("UpdateAuthor", "Author", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <label>YAZAR ID:</label>
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <label>YAZAR AD:I</label>
        @Html.TextBoxFor(x => x.NAME, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <label>YAZAR SOYADI:</label>
        @Html.TextBoxFor(x => x.SURNAME, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <label>YAZAR DETAY:</label>
        @Html.TextBoxFor(x => x.DETAİL, new { @class = "form-control" })
    </div>
    <button class="btn btn-warning">Yazar Bilgilerini Güncelle</button>
}

