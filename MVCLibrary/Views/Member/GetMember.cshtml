@model MVCLibrary.Models.Entities.TBLMEMBERS
@{
    ViewBag.Title = "GetMember";
    Layout = "~/Views/Shared/_MYLayout.cshtml";
}

<h2>ÜYE GÜNCELLE</h2>

@using (Html.BeginForm("UpdateMembers", "Member", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        <label>ÜYE ADI </label>
        @Html.TextBoxFor(k => k.NAME, new { @class = "form-control" })
        <br />
        <label>ÜYE SOYADI </label>
        @Html.TextBoxFor(k => k.SURNAME, new { @class = "form-control" })
        <br />
        <label>ÜYE MAİL </label>
        @Html.TextBoxFor(k => k.MAIL, new { @class = "form-control" })
        <br />
        <label>ÜYE NICKNAME </label>
        @Html.TextBoxFor(k => k.NICKNAME, new { @class = "form-control" })
        <br />
        <label>ÜYE ŞİFRE </label>
        @Html.TextBoxFor(k => k.PASSWORD, new { @class = "form-control" })
        <br />
        <label>ÜYE FOTOĞRAF </label>
        @Html.TextBoxFor(k => k.PHOTGHRAPH, new { @class = "form-control" })
        <br />
        <label>ÜYE TELEFON </label>
        @Html.TextBoxFor(k => k.PHONENUMBER, new { @class = "form-control" })
        <br />
        <label>ÜYE SOYADI </label>
        @Html.TextBoxFor(k => k.SCHOOL, new { @class = "form-control" })
    </div>

    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}
