@model MVCLibrary.Models.Entities.TBLCATEGORY
@{
    ViewBag.Title = "GetCategories";
    Layout = "~/Views/Shared/_MYLayout.cshtml";
}

<h2>Kategori Güncelle</h2>

@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.HiddenFor(x=>x.CATEGORYID)
        @Html.LabelFor(k=>k.CATEGORYID)
        @Html.TextBoxFor(k => k.CATEGORYID, new { @class = "form-control" })
        <br />
        @*@Html.LabelFor(k=>k.CATEGORYID)*@
        <label>KATEGORİ ADI </label>
        @Html.TextBoxFor(k => k.NAME, new { @class = "form-control" })

    </div>

   <div>
       <button class="btn btn-warning">Güncelle</button>
   </div>
}

