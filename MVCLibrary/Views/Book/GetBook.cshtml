@model MVCLibrary.Models.Entities.TBLBOOK
@{
    ViewBag.Title = "GetBook";
    Layout = "~/Views/Shared/_MYLayout.cshtml";
}

@using (Html.BeginForm("UpdateBook", "Book", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>

    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>KİTAP ID:</label>
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>KİTAP ADI:</label>
            @Html.TextBoxFor(x => x.NAME, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>KATEGORİ:</label>
            @Html.DropDownListFor(x => x.TBLCATEGORY.CATEGORYID, (List<SelectListItem>)ViewBag.dgr3, new {@class="form-control"})
        </div>
        <div style="margin-bottom:15px">
            <label>YAZAR:</label>
            @Html.DropDownListFor(x => x.TBLAUTHOR.ID, (List<SelectListItem>)ViewBag.dgr4, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>BASIM YILI:</label>
            @Html.TextBoxFor(x => x.PUBLICYEAR, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>YAYINEVİ:</label>
            @Html.TextBoxFor(x => x.PUBLISHER, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>SAYFA</label>
            @Html.TextBoxFor(x => x.SHEET, new { @class = "form-control" })
        </div>
        <button class="btn btn-warning">Kitap Bilgilerini Güncelle</button>
    </div>
}

